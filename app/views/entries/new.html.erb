<h1>Add New Entry for <%= @place.name %></h1>

<%= form_with model: [@place, @entry] do |form| %>
  <%= form.hidden_field :place_id, value: @place.id %>

  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :date_posted, "Date" %><br>
    <%= form.date_field :date_posted %>
  </div>

  <br>
  <%= form.submit "Create Entry" %>
<% end %>

<%= link_to "Back to <%= @place.name %>", place_path(@place) %>

<p>Find me in app/views/entries/new.html.erb</p>
